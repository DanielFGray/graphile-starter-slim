{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "moduleResolution": "NodeNext",
    "lib": ["dom", "esnext.asynciterable"],
    "target": "esnext",
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "scripts/**/*", "worker/**/*"]
}
