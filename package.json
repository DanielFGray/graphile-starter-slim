{
  "name": "@danielfgray/graphile-starter-slim",
  "private": true,
  "version": "0.1.0",
  "author": "DanielFGray <DanielFGray@gmail.com>",
  "license": "Unlicense",
  "homepage": "https://github.com/DanielFGray/graphile-starter-slim",
  "scripts": {
    "typesync": "typesync --ignoredeps=dev",
    "prestart": "run-s -s db:start",
    "watch:tsc": "run-s -s 'type-check --watch'",
    "watch:gqlgen": "run-s -s 'gqlgen -w'",
    "watch:server": "tsnd -T -r dotenv/config ./src/server/index.ts",
    "watch:db": "run-s -s 'gm watch'",
    "start": "run-p -s watch:db watch:gqlgen watch:server #watch:tsc",
    "build:schema": "tsnd -T -r dotenv/config scripts/createSchema.ts",
    "build:clean": "rm -fr dist src/generated",
    "build:server": "vite build --ssr src/server/index.ts --ssrManifest -l info",
    "build:client": "vite build src/client -l info",
    "build": "run-s -s build:schema gqlgen build:client build:server",
    "gqlgen": "gql-gen -e",
    "start:prod": "NODE_ENV=production node -r dotenv/config build/server.js",
    "gm": "node -r dotenv/config ./node_modules/.bin/graphile-migrate",
    "db:init": "node -r dotenv/config scripts/setup.mjs",
    "db:start": "docker-compose up -d db",
    "db:latest": "run-s -s 'gm watch --once'",
    "db:reset": "run-s -s 'gm reset --erase'",
    "db:stop": "docker-compose stop db",
    "db:exec": "docker-compose exec db",
    "db:setup": "NOCONFIRM=1 run-s -s db:start db:init db:reset db:latest",
    "db:dump-schema": "docker-compose run db pg_dump --no-sync --schema-only --no-owner --no-comments --exclude-schema=graphile_migrate --exclude-schema=graphile_worker > ./schema.sql",
    "db:dump-data": "docker-compose run db pg_dump --no-sync --data-only --no-owner --no-comments --exclude-schema=graphile_migrate --exclude-schema=graphile_worker > ./data.sql",
    "generate-env-file": "node scripts/generateEnvFile.mjs",
    "setup": "run-s -s generate-env-file db:setup build:schema",
    "fmt": "prettier --write './{src,scripts,worker}/**/*.{js,ts,tsx,mjs,graphql,css,html}'",
    "lint:js": "eslint --cache --ext=.js,.js,.ts,.tsx,.mjs src scripts worker",
    "lint": "run-p -sc lint:*",
    "lint-fix:js": "run-p -s 'lint:js --fix'",
    "lint-fix": "run-p -sc lint-fix:*",
    "type-check": "tsc --noEmit --pretty --preserveWatchOutput"
  },
  "dependencies": {
    "@apollo/client": "^3.7.15",
    "@graphile-contrib/pg-many-to-many": "^2.0.0-1.1",
    "@graphile/pg-aggregates": "^0.2.0-alpha.0",
    "@graphile/simplify-inflection": "^8.0.0-alpha.3",
    "@vitejs/plugin-react": "^4.0.0",
    "connect-pg-simple": "^8.0.0",
    "connect-redis": "^7.1.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "grafast": "^0.0.1-alpha.8",
    "grafserv": "^0.0.1-alpha.8",
    "graphile-build": "^5.0.0-alpha.9",
    "graphile-build-pg": "^5.0.0-alpha.10",
    "graphile-migrate": "^1.4.1",
    "graphile-utils": "^5.0.0-alpha.10",
    "graphile-worker": "^0.14.0-alpha.0",
    "graphql": "16.1.0-experimental-stream-defer.6",
    "helmet": "^7.0.0",
    "html-to-text": "^9.0.5",
    "inquirer": "^9.2.6",
    "mjml": "^4.14.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.3",
    "npm-run-all": "^4.1.5",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "pg-introspection": "^0.0.1-alpha.2",
    "pg-sql2": "^5.0.0-alpha.2",
    "postgraphile": "^5.0.0-alpha.10",
    "postgraphile-plugin-connection-filter": "^3.0.0-alpha.0",
    "react": "^18.3.0-canary-21a161fa3-20230609",
    "react-dom": "^18.3.0-canary-21a161fa3-20230609",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "5.3.4",
    "redis": "^4.6.7",
    "vite": "^4.3.9",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typed-document-node": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@tsconfig/node20": "^1.0.1",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/html-to-text": "^9.0.1",
    "@types/mjml": "^4.7.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-github2": "^1.2.5",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/react-router-dom": "5.3.3",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "prettier": "^2.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3",
    "typesync": "^0.11.1"
  },
  "resolutions": {
    "esbuild": "^0.17.19",
    "graphql": "16.1.0-experimental-stream-defer.6"
  }
}
