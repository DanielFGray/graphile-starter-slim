{
  "name": "@danielfgray/graphile5-remix",
  "description": "",
  "version": "0.1.0",
  "main": "server.ts",
  "keywords": [],
  "author": "DanielFGray <DanielFGray@gmail.com>",
  "license": "Unlicense",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "_build": "remix build",
    "_dev": "run-p -s build 'dev:*'",
    "_dev:node": "tsnd -r dotenv/config -T server.ts",
    "_dev:remix": "remix watch",
    "_start": "cross-env NODE_ENV=production node ./server.js",
    "prestart": "run-s -s db:start",
    "watch:tsc": "run-s -s 'typecheck --watch'",
    "watch:gqlgen": "run-s -s 'gqlgen -w'",
    "watch:server": "remix dev --manual -c \"tsnd -T -r dotenv/config ./server.ts\"",
    "watch:remix": "remix watch",
    "watch:db": "run-s -s 'gm watch'",
    "start": "run-p -s watch:db watch:gqlgen watch:remix watch:server #watch:tsc",
    "build:schema": "tsnd -T -r dotenv/config scripts/createSchema.ts",
    "build:clean": "rm -fr dist src/generated",
    "build:remix": "remix build",
    "build:styles": "run-s -s 'tw --minify'",
    "build": "NOCONFIRM=1 run-s -s build:schema gqlgen build:remix",
    "gqlgen": "gql-gen -se",
    "start:prod": "NODE_ENV=production node -r dotenv/config build/server.js",
    "gm": "node -r dotenv/config ./node_modules/.bin/graphile-migrate",
    "db:init": "node -r dotenv/config scripts/setup.mjs",
    "db:start": "docker-compose up -d db",
    "db:latest": "run-s -s 'gm watch --once'",
    "db:reset": "run-s -s 'gm reset --erase'",
    "db:stop": "docker-compose stop db",
    "db:exec": "docker-compose exec db",
    "db:setup": "run-s db:start db:init db:reset db:latest start",
    "db:dump-schema": "docker-compose run db pg_dump --no-sync --schema-only --no-owner --no-comments --exclude-schema=graphile_migrate --exclude-schema=graphile_worker > ./schema.sql",
    "db:dump-data": "docker-compose run db pg_dump --no-sync --data-only --no-owner --no-comments --exclude-schema=graphile_migrate --exclude-schema=graphile_worker > ./data.sql",
    "generate-env-file": "node scripts/generateEnvFile.mjs",
    "presetup": "yarn",
    "setup": "NOCONFIRM=1 run-s generate-env-file db:setup build:schema",
    "fmt": "prettier --write './{app,server,scripts,worker}/**/*.{js,ts,tsx,mjs,graphql,css,html}'",
    "lint:js": "eslint --cache --ext=.js,.js,.ts,.tsx,.mjs src scripts worker",
    "lint": "run-p -sc lint:*",
    "lint-fix:js": "run-p -s 'lint:js --fix'",
    "lint-fix": "run-p -sc lint-fix:*",
    "typesync": "typesync --ignoredeps=dev",
    "typecheck": "tsc --noEmit --pretty --preserveWatchOutput"
  },
  "dependencies": {
    "@graphile-contrib/pg-many-to-many": "^1.0.2",
    "@graphile/pg-aggregates": "^0.1.1",
    "@graphile/simplify-inflection": "^8.0.0-beta.1",
    "@remix-run/css-bundle": "^1.17.1",
    "@remix-run/express": "^1.17.1",
    "@remix-run/node": "^1.17.1",
    "@remix-run/react": "^1.17.1",
    "compression": "^1.7.4",
    "connect-pg-simple": "^9.0.0",
    "connect-redis": "^7.1.0",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphile-migrate": "^1.4.1",
    "graphile-worker": "^0.14.0-alpha.0",
    "graphql": "16.1.0-experimental-stream-defer.6",
    "helmet": "^7.0.0",
    "html-to-text": "^9.0.5",
    "isbot": "^3.6.8",
    "mjml": "^4.14.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "pg-introspection": "^0.0.1-beta.1",
    "pg-sql2": "^4.13.0",
    "postgraphile": "^5.0.0-beta.2",
    "postgraphile-plugin-connection-filter": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "redis": "^4.6.7",
    "s-ago": "^2.2.0",
    "source-map-support": "^0.5.21",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@remix-run/dev": "^1.17.1",
    "@remix-run/eslint-config": "^1.17.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.0.3",
    "eslint": "^8.43.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "remix-development-tools": "^1.0.6",
    "tailwindcss": "^3.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "resolutions": {
    "graphql": "16.1.0-experimental-stream-defer.6",
    "prettier": "^3.0.1"
  }
}
