{
  "name": "@DanielFGray/graphile-starter-slim",
  "private": true,
  "version": "0.1.0",
  "author": "DanielFGray <DanielFGray@gmail.com>",
  "license": "Unlicense",
  "homepage": "https://github.com/DanielFGray/graphile-starter-slim",
  "scripts": {
    "prestart": "run-s -s db:start",
    "watch:tsc": "run-s -s 'typecheck --watch'",
    "watch:gqlgen": "run-s -s 'gqlgen -w'",
    "watch:styles": "run-s -s 'tw -w'",
    "watch:server": "tsnd -T -r dotenv/config ./src/server/index.ts",
    "watch:db": "run-s -s 'gm watch'",
    "start": "run-p -s watch:db watch:gqlgen watch:server watch:styles #watch:tsc",
    "build:schema": "tsnd -T -r dotenv/config scripts/createSchema.ts",
    "build:clean": "rm -fr dist src/generated",
    "build:server": "vite build --outDir dist/server --ssr src/server/index.ts -l info",
    "build:client": "vite build --outDir dist/client src/client -l info --ssrManifest",
    "build:styles": "run-s -s 'tw --minify'",
    "tw": "tailwindcss -o ./src/generated/styles.css",
    "build": "NOCONFIRM=1 run-s -s build:schema gqlgen build:styles build:client build:server",
    "gqlgen": "gql-gen -se",
    "start:prod": "NODE_ENV=production node -r dotenv/config build/server.js",
    "gm": "node -r dotenv/config ./node_modules/.bin/graphile-migrate",
    "db:init": "node -r dotenv/config scripts/setup.mjs",
    "db:start": "docker-compose up -d db",
    "db:latest": "run-s -s 'gm watch --once'",
    "db:reset": "run-s -s 'gm reset --erase'",
    "db:stop": "docker-compose stop db",
    "db:exec": "docker-compose exec db",
    "db:setup": "run-s db:start db:init db:reset db:latest start",
    "db:dump-schema": "docker-compose run db pg_dump --no-sync --schema-only --no-owner --no-comments --exclude-schema=graphile_migrate --exclude-schema=graphile_worker > ./schema.sql",
    "db:dump-data": "docker-compose run db pg_dump --no-sync --data-only --no-owner --no-comments --exclude-schema=graphile_migrate --exclude-schema=graphile_worker > ./data.sql",
    "generate-env-file": "node scripts/generateEnvFile.mjs",
    "presetup": "yarn",
    "setup": "NOCONFIRM=1 run-s generate-env-file db:setup build:schema start",
    "fmt": "prettier --write './{src,scripts,worker}/**/*.{js,ts,tsx,mjs,graphql,css,html}'",
    "lint:js": "eslint --cache --ext=.js,.ts,.tsx,.mjs src scripts worker",
    "lint": "run-p -sc lint:*",
    "lint-fix:js": "run-p -s 'lint:js --fix'",
    "lint-fix": "run-p -sc lint-fix:*",
    "typesync": "typesync --ignoredeps=dev",
    "typecheck": "tsc --noEmit --pretty --preserveWatchOutput"
  },
  "dependencies": {
    "@apollo/client": "3.4.17",
    "@graphile-contrib/pg-many-to-many": "^2.0.0-alpha.2",
    "@graphile/pg-aggregates": "^0.2.0-alpha.5",
    "@graphile/simplify-inflection": "^8.0.0-alpha.4",
    "connect-pg-simple": "^9.0.0",
    "connect-redis": "^7.1.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphile-migrate": "^1.4.1",
    "graphile-worker": "alpha",
    "graphql": "16.1.0-experimental-stream-defer.6",
    "helmet": "^7.0.0",
    "html-to-text": "^9.0.5",
    "inquirer": "^9.2.6",
    "mjml": "^4.14.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.3",
    "npm-run-all": "^4.1.5",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "postgraphile": "^5.0.0-alpha.20",
    "postgraphile-plugin-connection-filter": "^3.0.0-alpha.4",
    "react": "^18.3.0-canary-21a161fa3-20230609",
    "react-dom": "^18.3.0-canary-21a161fa3-20230609",
    "react-error-boundary": "^4.0.10",
    "react-helmet-async": "^1.3.0",
    "react-relay": "^15.0.0",
    "react-router-dom": "^6.12.1",
    "redis": "^4.6.7",
    "s-ago": "^2.2.0",
    "vite": "^4.3.9",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@danielfgray/tw-heropatterns": "^0.1.6",
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@parcel/watcher": "^2.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@tsconfig/node20": "^20.1.1",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/html-to-text": "^9.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.195",
    "@types/mjml": "^4.7.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-github2": "^1.2.5",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@types/react-relay": "^14.1.4",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.19.1",
    "eslint": "^8.42.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.24",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.2",
    "relay-compiler": "^15.0.0",
    "tailwindcss": "^3.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0-dev.20230606",
    "typesync": "^0.11.1"
  },
  "resolutions": {
